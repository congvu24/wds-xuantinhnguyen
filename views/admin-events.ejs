<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/admin-add.css">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel='stylesheet' type="text/css" href="/css/bootstrap.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/admin-event.js"></script>
    <title>Quản lí bài viết</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="nav col-sm-10">
                <img src="/img/4logo.png" class="admin-logo">
                <a class="nav-link active" href="/admin">Quản lí hoạt động</a>
                <a class="nav-link " href="/admin/products">Quản lí Bán Hàng</a>
                <a class="nav-link " href="/admin/teams">Quản lí Đội Hình</a>
            </nav>
            <nav class="nav col-sm-2"><a class="nav-link admin-logout" href="/admin/logout">Đăng xuất</a></nav>
        </div>
    </div>
    <div class="container mt-5">
        <h1 class="text-center">Quản lí Hoạt Động</h1>
        <div class="row">
            <div class="form-infor container-fluid">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tên hoạt động</th>
                            <th scope="col">Thời gian diễn ra</th>
                            <th scope="col">Chỉnh sửa</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if(!data){%>
                        <h1>khong co hoat dong nao</h1><%}else{
                                events = data.events
                                for(i=0;i<events.length;i++){
                                    event = events[i]%>
                        <tr id="td-<%=event._id%>">
                            <th scope="row"><%=i+1%></th>
                            <td><%=event.title%></td>
                            <td><%=event.parseDate()%></td>
                            <td>
                                <a name="" class="btn btn-success btn-edit" href="/admin/event/edit/<%=event._id%>"
                                    role="button" id="<%=event._id%>">Sửa</a>
                                    <a class="btn btn-danger" data-toggle="modal" data-target="#modelId" role="button">
                                        Xóa
                                    </a>
                               
                            </td>
                        </tr>
                        <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                           
                                        <div class="modal-body">
                                            <div class="container-fluid">
                                                Bạn có chắc chắn muốn xóa không ?
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                            <a name="" class="btn btn-danger btn-del" href="#" role="button" data-dismiss="modal"
                                                            id="<%=event._id%>">Xóa</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <%}}%>
                    </tbody>
                </table>
            </div>
            <a name="" id="" class="btn btn-success mt-5 ml-auto" href="/admin/add-event" role="button">Thêm bài viết
                mới</a>
        </div>
    </div>
    <!-- Modal -->
  
</body>
</html>