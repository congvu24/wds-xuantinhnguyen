                        <!-- Start single blog -->
                        <% if (events) { %>
                        <%for(const each_event of events){%>
                        <div class="row d-flex align-items-stretch eachblog">
                            <div class="image col-lg-5"><img src="<%= each_event.image %>" alt="Banner Image">
                            </div>
                            <div class="text col-lg-7">
                                <div class="text-inner d-flex align-items-center">
                                    <div class="content">
                                        <header class="post-header">
                                            <a href="/details/<%= each_event._id %>">
                                                <h2 class="h4"><%= each_event.title.toUpperCase() %></h2>
                                            </a>
                                        </header>
                                        <footer class="post-footer d-flex align-items-center blog-meta">
                                            <span class="date-type"><i
                                                    class="fa fa-user-o"></i><%= each_event.author %></span>
                                            <span class="date-type"><i
                                                    class="fa fa-calendar-check-o"></i><%= each_event.parseDate()%></span>
                                            <%  var DateNow = new Date().toISOString(); 
                                                    DateNow = Date.parse(DateNow);
                                                    var date = Date.parse(each_event.timeOpen.toString());
                                                    if (date <= DateNow) ValidStatus = "Đang diễn ra";
                                                    else ValidStatus = "Chưa diễn ra";
                                            %>
                                            <span class="date-type"><i class="fa fa-bell-o"></i><%=ValidStatus%></span>
                                        </footer>
                                        <p><%= each_event.shortDescription %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }} %>
                        <!-- End single post -->
                    </div>
                    <div class="blog-pagination text-center">
                        <% if (pages > 0) { %>
                        <ul class="pagination">
                            <% if (current == 1) { %>
                            <li class="disabled"><a>
                                    <<</a> </li> <% } else { %> <li><a href="/">
                                            <<</a> </li> <% } %>
                                                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                                <% if (i !== 1) { %> <li class="disabled"><a>...</a>
                            </li>
                            <% } %>
                            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                            <% if (i == current) { %>
                            <li class="active"><a><%= i %></a></li>
                            <% } else { %>
                            <li><a href="/blog?page=<%= i %>"><%= i %></a></li>
                            <% } %>
                            <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled"><a>...</a></li>
                            <% } %>
                            <% } %>
                            <% if (current == pages) { %>
                            <li class="disabled"><a>>></a></li>
                            <% } else { %>
                            <li><a href="/blog?page=<%= pages %>">>></a></li>
                            <% } %>
                        </ul>
                        <% } %>
